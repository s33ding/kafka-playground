{
  "name": "s3-iceberg-sink-connector",
  "config": {
    "connector.class": "io.confluent.connect.s3.S3SinkConnector",
    "tasks.max": "3",
    "topics": "postgres-server.kafka.mcdonalds_sales,postgres-server.kafka.mcdonalds_inventory,postgres-server.kafka.mcdonalds_employees",
    "s3.region": "us-east-1",
    "s3.bucket.name": "s33ding-kafka-output",
    "flush.size": "100",
    "rotate.interval.ms": "60000",
    "storage.class": "io.confluent.connect.s3.storage.S3Storage",
    "format.class": "io.confluent.connect.iceberg.IcebergFormat",
    "iceberg.catalog.type": "glue",
    "iceberg.catalog.glue.warehouse": "s3://s33ding-kafka-output/db_bronze/",
    "iceberg.catalog.glue.database": "bronze",
    "iceberg.table.auto.create": "true",
    "iceberg.table.write.format": "parquet"
  }
}
